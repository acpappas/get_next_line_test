{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "clang compile 1",
			"type": "shell",
			"command": "clang",
			"args": [
				"-Wall",
				"-Wextra",
				"-Werror",
				"-I",
				"libft/includes",
				"-o",
				"get_next_line.o",
				"-c",
				"get_next_line.c"
			]
		},
		{
			"type": "shell",
			"label": "clang compile 2",
			"command": "/usr/bin/clang",
			"args": [
				"-g",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			]
		}
	]
}